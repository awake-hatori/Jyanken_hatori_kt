<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center|top"
        android:text="@string/result_announcement"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/final_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center|top"
        android:layout_weight="1"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/win_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:gravity="left|top"
        android:text="@string/win_num"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/lose_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:gravity="left|top"
        android:text="@string/lose_num"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/draw_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:gravity="left|top"
        android:text="@string/draw_num"
        android:textSize="40sp" />

    <Button
        android:id="@+id/to_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:text="@string/toTitle" />

</LinearLayout>